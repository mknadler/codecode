       ${5:rules for 2}
    } @else if \$${1:condition} == "${6:condition3}" {
       ${7:rules for  3}
    } @else if \$${1:condition} == "${8:condition 4}" {
      ${9:rules for 4}
    } @else {
      ${10:rules when none are met}
    }
	]]>
	</content>
